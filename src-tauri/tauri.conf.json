{
    "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/v2/schema.json",
    "productName": "mSnip",
    "version": "0.1.0",
    "identifier": "com.tauri.dev",
    "build": {
        "frontendDist": "../build",
        "devUrl": "http://localhost:5173",
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build"
    },
    "app": {
        "macOSPrivateApi": true,
        "windows": [
            {
                "label": "main",
                "title": "mSnip",
                "titleBarStyle": "Overlay",
                "url": "/",
                "width": 800,
                "height": 600,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null,
            "assetProtocol": {
                "enable": true,
                "scope": ["**"]
            }
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
    }
}
